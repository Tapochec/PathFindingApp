<UserControl x:Class="PathFindingApp.View.Visualization.Tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PathFindingApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" Background="White">
    <Border x:Name="TileBorder">
        <Grid x:Name="SourceGrid">
            <Label
            x:Name="TileLabel"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            FontWeight="Bold"/>
        </Grid>
    </Border>
</UserControl>
